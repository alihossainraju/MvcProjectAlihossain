@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h2 align="center"><u>Reporter Information</u></h2>
    <button type="button" style="background-color:greenyellow; color:black;" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New User</button><br /><br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr style="background-color:antiquewhite;">
                <th>
                    Reporter ID
                </th>
                <th style="background-color:aliceblue;">
                    Reporter Name
                </th>
                <th>
                    Reporter Age
                </th>
                <th style="background-color:aliceblue;">
                    Divission Name
                </th>
                <th>
                    Country Name
                </th>
                <th style="background-color:aliceblue;">
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Add Reporter</h4>
            </div>
            <div class="modal-body" style="background-color:lightblue;">
                <form style="border:2px solid black;">
                    <div class="form-group">
                        <label for="Id"></label>
                        <input type="text" class="form-control" id="ID" placeholder="Id" disabled="disabled" style="display:none" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Reporter Name :</label>
                        <input type="text" class="form-control" id="Name" placeholder="input your name" />
                    </div>
                    <div class="form-group">
                        <label for="Age">Reporter Age :</label>
                        <input type="text" class="form-control" id="Age" placeholder="input your age" />
                    </div>
                    <div class="form-group">
                        <label for="State">Divission Name :</label>
                        <input type="text" class="form-control" id="State" placeholder="input your divission name" />
                    </div>
                    <div class="form-group">
                        <label for="Country">Country Name :</label>
                        <input type="text" class="form-control" id="Country" placeholder="input your country name" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();" style="background-color:greenyellow; color:black;">Insert</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();" >Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" style="background-color:orangered;">Exist</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Users.js"></script>
